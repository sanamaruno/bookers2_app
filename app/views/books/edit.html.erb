<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="col-md-8 offset-md-1">
     <h1>Editing Book</h1>
     <%= form_with model: @book, local: true do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <br>
       <%= f.submit 'Update Book', class: 'btn btn-success' %>
     <% end %>
     <br>
     <%= link_to "Show", book_path(@book.id) %>
     |
     <%= link_to "Back", books_path %>
    </div>
  </div>
</div>