<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="col-md-8 offset-md-1">
     <h1>User info</h1>

     <p class="validates">
      <% if @user.errors.any? %>
       <%= @user.errors.count %>error
       <% @user.errors.full_messages.each do |message| %>
         <%= message %><br>
       <% end %>
      <% end %>
     </p>

     <%= form_with model: @user, local: true do |f| %>
      <label for="inputName">Name</label>
      <br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      <br>
      <label for="inputImage">Image</label>
      <br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <br>
      <label for="inputIntroduction">Introduction</label>
      <br>
      <%= f.text_area :introduction , autofocus: true, id:"inputIntroduction" %>

      <br>
      <%= f.submit 'Update User', class: 'btn btn-secondary' %>
     <% end %>
    </div>
  </div>
</div>