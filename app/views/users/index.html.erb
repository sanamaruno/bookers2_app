<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/info', user:@user %>

      <h3>New book</h3>
      <%= form_with model: @book,local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <h5>Opinion</h5>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </br>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
            <%#= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <td><%= user.name %></td>

            <td><%= "フォロー数：#{user.followings.count}" %></td>
            <td><%= "フォロワー数：#{user.followers.count}" %></td>

            <!-------ここからフォローボタン関連----------->
            <% if current_user != user %>
              <% if user.followed_by?(current_user) %>
               <td><%=link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
              <% else %>
               <td><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
              <% end %>
            <% else %>
              <td></td>
            <% end %>
            <!------------------------------------------>

            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>