<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/info', user:@user %>

      <h3>New book</h3>
      <%= form_with model: @book,local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <h5>Opinion</h5>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </br>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user.profile_image_id, :fill, 20, 20, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>