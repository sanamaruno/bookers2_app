<p class="notice">
<%= flash[:notice] %>
</p>

<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/info', user:@user %>

      <h3>New book</h3>
      <%= form_with model: @newbook,local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <h5>Opinion</h5>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </br>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
            <td>
              <%= link_to book_path(book.id) do %>
               <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
